@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    @await Component.InvokeAsync("_LoginStyleComponentPartial")
</head>
<body>
    <div class="login-container">
        <div class="eco-crm-title">ECO CRM</div>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Kullanıcı Adı</label>
                <input type="text" class="form-control" asp-for="Username" required />
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div style="color: red; margin-bottom: 15px; font-weight: bold;">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="form-group">
                <label for="password">Şifre</label>
                <input type="password" class="form-control" asp-for="Password" required />
            </div>
            <button type="submit" class="btn btn-danger">Giriş</button>
        </form>
        <div class="form-footer">Sisteme erişmek için lütfen bilgilerinizi giriniz.</div>
    </div>
    <div style="position: fixed; bottom: 10px; right: 20px; color: #fff; font-size: 12px;">
        Designed by Eco Software Development ℗
    </div>
</body>
</html>

@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <style>
        body {
            background: linear-gradient(to bottom, #b30000, #800000);
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
        }

        .login-container {
            background-color: #fff;
            padding: 40px;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
            width: 100%;
            max-width: 400px;
            text-align: center;
        }

        .eco-crm-title {
            font-size: 32px;
            color: #b30000;
            font-weight: bold;
            margin-bottom: 20px;
            letter-spacing: 1.5px;
            text-transform: uppercase;
            font-family: 'Arial', sans-serif;
        }

        .form-control {
            width: 100%;
            padding: 12px;
            margin: 12px 0;
            display: inline-block;
            border: 1px solid #ddd;
            border-radius: 6px;
            box-sizing: border-box;
            transition: border 0.3s, box-shadow 0.3s;
            font-size: 16px;
        }

            .form-control:focus {
                border: 1px solid #b30000;
                outline: none;
                box-shadow: 0 0 8px rgba(179, 0, 0, 0.4);
            }

        .btn-danger {
            background-color: #b30000;
            border: none;
            padding: 12px;
            width: 100%;
            color: white;
            border-radius: 6px;
            cursor: pointer;
            font-size: 16px;
            font-weight: bold;
            transition: background-color 0.3s, transform 0.3s;
            margin-top: 15px;
            text-transform: uppercase;
        }

            .btn-danger:hover {
                background-color: #990000;
                transform: translateY(-2px);
            }

            .btn-danger:active {
                transform: translateY(1px);
            }

        .form-group {
            margin-bottom: 15px;
            text-align: left;
        }

        label {
            color: #b30000;
            font-weight: bold;
            font-size: 14px;
        }

        .form-footer {
            margin-top: 10px;
            font-size: 12px;
            color: #999;
        }

        @@media (max-width: 500px) {
            .login-container {
                padding: 20px;
            }

            .form-control {
                padding: 10px;
            }

            .btn-danger {
                padding: 10px;
            }

            .eco-crm-title {
                font-size: 24px;
            }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="eco-crm-title">ECO CRM</div>
        <form asp-action="Login" method="post">
            <div class="form-group">
                <label for="username">Kullanıcı Adı</label>
                <input type="text" class="form-control" asp-for="Username" required />
            </div>
            @if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div style="color: red; margin-bottom: 15px; font-weight: bold;">
                    @ViewBag.ErrorMessage
                </div>
            }
            <div class="form-group">
                <label for="password">Şifre</label>
                <input type="password" class="form-control" asp-for="Password" required />
            </div>
            <button type="submit" class="btn btn-danger">Giriş</button>
        </form>
        <div class="form-footer">Sisteme erişmek için lütfen bilgilerinizi giriniz.</div>
    </div>
</body>
</html>

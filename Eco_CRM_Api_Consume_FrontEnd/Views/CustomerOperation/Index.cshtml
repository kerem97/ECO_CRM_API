@{
    ViewBag.Title = "Tüm İşlemler";
    var allOperations = Model as List<DisplayCustomerOperationResponse>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECO CRM - Tüm İşlemler</title>
    <!-- jQuery CDN -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK"
            crossorigin="anonymous"></script>

    <style>
        /* Stil kodları aynı kalıyor */
        body {
            background: linear-gradient(to bottom, #b30000, #4d0000);
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            display: flex;
            min-height: 100vh;
            overflow: hidden;
            flex-direction: column;
        }

        .navbar {
            background-color: #990000;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #fff;
            font-weight: bold;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

            .navbar .eco-crm {
                font-size: 24px;
            }

            .navbar .user-info {
                font-size: 18px;
            }

        .sidebar {
            background-color: #333;
            padding: 20px;
            width: 200px;
            position: fixed;
            top: 60px;
            bottom: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            z-index: 900;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.3);
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                padding: 10px 0;
                font-size: 16px;
                border-bottom: 1px solid #444;
                margin-bottom: 5px;
                transition: background-color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

        h3 {
            margin-left: 220px;
            margin-top: 80px;
            color: #fff;
            text-align: left;
            font-size: 18px;
        }

        table {
            width: calc(100% - 220px);
            margin-left: 100px;
            margin-top: 40px;
            border-collapse: collapse;
            background-color: #660000;
            border-radius: 8px;
            overflow: hidden;
            color: #fff;
            font-size: 12px;
        }

        th, td {
            padding: 6px;
            text-align: left;
            color: #fff;
            border: 1px solid #660000;
        }

        th {
            background-color: #990000;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-size: 12px;
        }

        td {
            background-color: #b30000;
            font-size: 12px;
        }

        tbody tr:hover {
            background-color: #cc0000;
        }

        tbody tr:nth-child(odd) td {
            background-color: #660000;
        }

        tbody tr:nth-child(even) td {
            background-color: #4d0000;
        }

        .footer-text {
            position: fixed;
            bottom: 10px;
            right: 20px;
            color: #fff;
            font-size: 12px;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="/Dashboard/Index/">Ana Sayfa</a>
        <a href="/CustomerOperation/Index/">Tüm İşlemler</a>
        <a href="/Customer/">Müşteriler</a>
        <a href="/Account/Logout/">Çıkış</a>
    </div>

    <div class="navbar">
        <div class="eco-crm">ECO CRM</div>
        <div class="user-info">@ViewBag.FullName</div>
    </div>

    <h3 style="margin-left:85px;">Tüm İşlemler Listesi</h3>
    <table style="width: 100%;">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Personel</th>
                <th>Firma</th>
                <th>Müşteri</th>
                <th>Adres</th>
                <th>Yöntem</th>
                <th>Görüşülen</th>
                <th>Planlanan Tarih</th>
                <th>Görüşülen Tarih</th>
                <th>Sebep</th>
                <th>Durum</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var operation in allOperations)
            {
                <tr>
                    <td>@operation.OperationDate</td>
                    <td>@operation.CreatedByUser</td>
                    <td>@operation.IsNew</td>
                    <td>@operation.CustomerName</td>
                    <td>@operation.Address</td>
                    <td>@operation.Method</td>
                    <td>@operation.ContactPerson</td>
                    <td>@operation.PlannedDate</td>
                    <td>@operation.ActualDate</td>
                    <td>@operation.Reason</td>
                    <td>@operation.Status</td>
                    <td class="description-cell" style="white-space: normal; word-wrap: break-word;">
                        @operation.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="footer-text">Designed by Eco Software Development ℗</div>
    <div id="pagination-controls" style="text-align: center; margin-top: 20px;">
        <button class="btn btn-danger btn-sm mx-1" onclick="changePage('prev')" style="border-radius: 20px; padding: 5px 15px;">◀ Previous</button>
        <span id="currentPage" style="font-size: 16px; font-weight: bold; padding: 0 10px; color: #fff;">1</span>
        <button class="btn btn-danger btn-sm mx-1" onclick="changePage('next')" style="border-radius: 20px; padding: 5px 15px;">Next ▶</button>
    </div>
    <script>
        let currentPage = 1;
        const pageSize = 15;
        const token = '@ViewBag.Token';


        $(document).ready(function () {
            fetchData(currentPage);
        });

        function fetchData(page) {
            $.ajax({
                url: `https://localhost:44309/api/CustomerOperation/paged-operations?pageNumber=${page}&pageSize=${pageSize}`,
                method: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + token
                },
                success: function (data) {
                    currentPage = page;
                    $('#currentPage').text(currentPage);

                    console.log(data);
                },
                error: function () {
                    alert('Veri alınırken hata oluştu.');
                }
            });
        }

        function changePage(direction) {
            if (direction === 'next') {
                fetchData(currentPage + 1);
            } else if (direction === 'prev' && currentPage > 1) {
                fetchData(currentPage - 1);
            }
        }
    </script>
</body>
</html>

@{
    ViewBag.Title = "Customer Operations";
    var customerOperations = Model as List<DisplayCustomerOperationResponse>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECO CRM - Müşteri Hareketleri</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    @await Component.InvokeAsync("_CustomerOperationByCustomerStyleComponentPartial")

</head>
<body>
    @await Component.InvokeAsync("_LayoutSideBarComponentPartial")
    @await Component.InvokeAsync("_LayoutNavbarComponentPartial")
    <div style="height: 5px; background-color: #000; width: 100%; position: fixed; top: 60px; left: 0; z-index: 999;"></div>
    <h3 style="margin-left:85px;">Müşteriye Ait İşlemler</h3>
    <table style="width: 100%;">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Personel</th>
                <th>Yöntem</th>
                <th>Firma</th>
                <th>Planlanan Tarih</th>
                <th>Görüşülen Tarih</th>
                <th>Görüşülen</th>
                <th>Sebep</th>
                <th>Durum</th>
                <th>Açıklama</th>
                <th>Güncellenen Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var operation in customerOperations)
            {
                <tr>
                    <td>@operation.OperationDate</td>
                    <td>@operation.CreatedByUser</td>
                    <td>@operation.Method</td>
                    <td>@operation.IsNew</td>
                    <td>@operation.PlannedDate</td>
                    <td>@operation.ActualDate</td>
                    <td>@operation.ContactPerson</td>
                    <td>@operation.Reason</td>
                    <td>@operation.Status</td>
                    <td class="description-cell" style="white-space: normal; word-wrap: break-word;">
                        @operation.Description
                    </td>
                    <td class="description-cell" style="white-space: normal; word-wrap: break-word;">
                        @operation.UpdatedStatusDescription
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
       
        document.addEventListener("DOMContentLoaded", function () {
            document.body.style.opacity = 1;
        });
    </script>
</body>
</html>

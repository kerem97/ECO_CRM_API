@{
    ViewBag.Title = "Customer Operations";
    var customerOperations = Model as List<DisplayCustomerOperationResponse>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECO CRM - Customer Operations</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        body {
            background: linear-gradient(to bottom, #b30000, #4d0000);
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            display: flex;
            min-height: 100vh;
            overflow: hidden;
            flex-direction: column;
        }

        .navbar {
            background-color: #990000;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #fff;
            font-weight: bold;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

            .navbar .eco-crm {
                font-size: 24px;
            }

            .navbar .user-info {
                font-size: 18px;
            }

        .sidebar {
            background-color: #333;
            padding: 20px;
            width: 200px;
            position: fixed;
            top: 60px;
            bottom: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            z-index: 900;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.3);
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                padding: 10px 0;
                font-size: 16px;
                border-bottom: 1px solid #444;
                margin-bottom: 5px;
                transition: background-color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

        h2, h3 {
            margin-left: 220px;
            margin-top: 80px;
            color: #fff;
            text-align: left;
            padding: 0;
        }

        table {
            width: calc(100% - 220px);
            margin-left: 100px;
            margin-top: 40px;
            border-collapse: collapse;
            background-color: #660000;
            border-radius: 8px;
            overflow: hidden;
            color: #fff;
            font-size: 12px;
        }

        th, td {
            padding: 6px;
            text-align: left;
            color: #fff;
            border: 1px solid #660000;
        }

        th {
            background-color: #990000;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-size: 12px;
        }

        td {
            background-color: #b30000;
            font-size: 12px;
        }

        tbody tr:hover {
            background-color: #cc0000;
        }

        tbody tr:nth-child(odd) td {
            background-color: #660000;
        }

        tbody tr:nth-child(even) td {
            background-color: #4d0000;
        }

    </style>
</head>
<body>
    <div class="sidebar">
        <a href="/Dashboard/Index/">Ana Sayfa</a>
        <a href="/CustomerOperation/Index/">Tüm İşlemler</a>
        <a href="/Customer/">Müşteriler</a>
        <a href="/Account/Logout/">Çıkış</a>
    </div>

    <div class="navbar">
        <div class="eco-crm">ECO CRM</div>
        <div class="user-info">@ViewBag.FullName</div>
    </div>

    <h3 style="margin-left:85px;">Müşteriye Ait İşlemler</h3>
    <table style="width: 100%;">
        <thead>
            <tr>
                <th>Tarih</th>
                <th>Personel</th>
                <th>Yöntem</th>
                <th>Firma</th>
                <th>Planlanan Tarih</th>
                <th>Görüşülen Tarih</th>
                <th>Görüşülen</th>
                <th>Sebep</th>
                <th>Durum</th>
                <th>Açıklama</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var operation in customerOperations)
            {
                <tr>
                    <td>@operation.OperationDate</td>
                    <td>@operation.CreatedByUser</td>
                    <td>@operation.Method</td>
                    <td>@operation.IsNew</td>
                    <td>@operation.PlannedDate</td>
                    <td>@operation.ActualDate</td>
                    <td>@operation.ContactPerson</td>
                    <td>@operation.Reason</td>
                    <td>@operation.Status</td>
                    <td class="description-cell" style="white-space: normal; word-wrap: break-word;">
                        @operation.Description
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

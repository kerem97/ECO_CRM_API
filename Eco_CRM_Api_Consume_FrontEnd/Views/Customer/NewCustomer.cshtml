@model AddCustomerRequest
@{
    ViewBag.Title = "Müşteri Ekle";
    Layout = "~/Views/Layout/Index.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK"
            crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/choices.js/public/assets/styles/choices.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/choices.js/public/assets/scripts/choices.min.js"></script>
</head>

<body>
    <div class="col-md-12 col-lg-12">
        <div class="row justify-content-center">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <div class="d-flex justify-content-between align-items-center">
                            <h4 class="card-title">Yeni Müşteri Ekleme Formu</h4>
                            <button type="submit" class="btn btn-primary" form="customerForm">Kaydet ve Devam Et</button>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <form asp-action="NewCustomer" method="post" id="customerForm">
                            <div class="row">
                                <!-- Sol Kolon -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="CompanyName" class="form-label">Şirket Adı</label>
                                        <input asp-for="CompanyName" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Country" class="form-label">Ülke</label>
                                        <input asp-for="Country" id="countryInput" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="City" class="form-label">Şehir</label>
                                        <input asp-for="City" id="cityInput" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="District" class="form-label">İlçe</label>
                                        <input asp-for="District" id="districtInput" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="ContactName" class="form-label">Yetkili Kişi</label>
                                        <input asp-for="ContactName" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="ContactPhone1" class="form-label">Telefon 1</label>
                                        <input asp-for="ContactPhone1" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="ContactPhone2" class="form-label">Telefon 2</label>
                                        <input asp-for="ContactPhone2" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="ContactEmail" class="form-label">E-Posta</label>
                                        <input asp-for="ContactEmail" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="PostalCode" class="form-label">Posta Kodu</label>
                                        <input asp-for="PostalCode" class="form-control" />
                                    </div>
                                </div>

                                <!-- Sağ Kolon -->
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="PriorityLevel" class="form-label">Önem Derecesi</label>
                                        <select asp-for="PriorityLevel" class="form-select">
                                            <option value="Çok düşük">Çok Düşük</option>
                                            <option value="Düşük">Düşük</option>
                                            <option value="Orta">Orta</option>
                                            <option value="Yüksek">Yüksek</option>
                                            <option value="Çok yüksek">Çok Yüksek</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Status" class="form-label">Durum</label>
                                        <select asp-for="Status" class="form-select">
                                            <option value="Aktif">Aktif</option>
                                            <option value="Pasif">Pasif</option>
                                            <option value="Aday">Aday</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="CustomerChannel" class="form-label">Müşteri Kanalı</label>
                                        <select asp-for="CustomerChannel" class="form-select">
                                            <option value="İnternet">İnternet</option>
                                            <option value="Tavsiye">Tavsiye</option>
                                            <option value="Fuar">Fuar</option>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="IsDomestic" value="Yurt İçi" id="yurtIci" required>
                                            <label class="form-check-label" for="yurtIci">Yurt İçi</label>
                                        </div>
                                        <div class="form-check form-check-inline">
                                            <input class="form-check-input" type="radio" asp-for="IsDomestic" value="Yurt Dışı" id="yurtDisi" required>
                                            <label class="form-check-label" for="yurtDisi">Yurt Dışı</label>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Group" class="form-label">Grup</label>
                                        <select asp-for="Group" class="form-select" id="groupSelect">
                                            <option value="" disabled selected>Seçiniz...</option>
                                            <option value="Tekstil">Tekstil</option>
                                            <option value="Rulo">Rulo</option>
                                        </select>
                                    </div>

                                    <div class="mb-3" id="ruloOptions" style="display: none;">
                                        <label asp-for="GroupCategoryDetail" class="form-label">Rulo Seçenekleri</label>
                                        <div class="form-check">
                                            <input asp-for="GroupCategoryDetail" class="form-check-input" type="radio" value="Yapışkanlı" id="Yapışkanlı">
                                            <label class="form-check-label" for="Yapışkanlı">Yapışkanlı</label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="GroupCategoryDetail" class="form-check-input" type="radio" value="Shrink Sleeve" id="ShrinkSleeve">
                                            <label class="form-check-label" for="ShrinkSleeve">Shrink Sleeve</label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="GroupCategoryDetail" class="form-check-input" type="radio" value="Piggyback" id="Piggyback">
                                            <label class="form-check-label" for="Piggyback">Piggyback</label>
                                        </div>
                                    </div>

                                    <div class="mb-3" id="tekstilOptions" style="display: none;">
                                        <label asp-for="GroupCategoryDetail" class="form-label">Tekstil Seçenekleri</label>
                                        <div class="form-check">
                                            <input asp-for="GroupCategoryDetail" class="form-check-input" type="radio" value="Denim" id="Denim">
                                            <label class="form-check-label" for="Denim">Denim</label>
                                        </div>
                                        <div class="form-check">
                                            <input asp-for="GroupCategoryDetail" class="form-check-input" type="radio" value="Non-Denim" id="NonDenim">
                                            <label class="form-check-label" for="NonDenim">Non-Denim</label>
                                        </div>
                                    </div>


                                    <div class="mb-3">
                                        <label asp-for="Address" class="form-label">Adres</label>
                                        <textarea asp-for="Address" class="form-control"></textarea>
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="LimitTl" class="form-label">Limit (TL)</label>
                                        <input asp-for="LimitTl" class="form-control" />
                                    </div>
                                    <div class="mb-3">
                                        <label asp-for="Description" class="form-label">Açıklama</label>
                                        <textarea asp-for="Description" class="form-control"></textarea>
                                    </div>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script>
    $(document).ready(function () {
        $('#groupSelect').on('change', function () {
            if ($(this).val() === "Rulo") {
                $('#ruloOptions').show();
                $('#tekstilOptions').hide();
            } else if ($(this).val() === "Tekstil") {
                $('#tekstilOptions').show();
                $('#ruloOptions').hide();
            } else {
                $('#ruloOptions, #tekstilOptions').hide();
            }
        });
        $('#groupSelect').trigger('change');
    });

    $('#customerForm').on('submit', function () {
        $('#countryInput, #cityInput, #districtInput').each(function () {
            $(this).val($(this).val().toUpperCase());
        });
    });
</script>

@{
    ViewData["Title"] = "CustomerDetail";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container-xxl">
    <div class="row">
        <div class="col-md-12 col-lg-5">
            @await Component.InvokeAsync("_CustomerDetailInfoComponentPartial", new { customerId = ViewBag.CustomerId })
        </div>
        <div class="col-md-12 col-lg-7">
            <div class="card">
                <div class="card-body">
                    <div class="row g-3">
                        @await Component.InvokeAsync("_CustomerTotalOperationsComponentPartial", new { customerId = ViewBag.CustomerId })
                        @await Component.InvokeAsync("_CustomerDetailApprovedTaskCountComponentPartial", new { customerId = ViewBag.CustomerId })
                        @await Component.InvokeAsync("_CustomerTaskAssignmentCountComponentPartial", new { customerId = ViewBag.CustomerId })
                     @*    @await Component.InvokeAsync("_CustomerDetailNotApprovedTaskCountComponentPartial", new { customerId = ViewBag.CustomerId }) *@
                        @await Component.InvokeAsync("_CustomerLastVisitUserComponentPartial", new { customerId = ViewBag.CustomerId })
                        
                    </div>
                    <div class="bg-primary-subtle p-2 border-dashed border-primary rounded mt-3">
                        <img src="~/HTML/dist/assets/images/extra/party.gif" alt="" class="d-inline-block me-1" height="30">
                        <span class="text-primary fw-semibold">Karen Savage's</span><span class="text-primary fw-normal"> best performance from last year</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h4 class="card-title">Orders</h4>
                        </div><!--end col-->
                        <div class="col-auto">
                            <button class="btn btn-primary"><i class="fas fa-eye me-1"></i> View All</button>
                        </div><!--end col-->
                    </div>  <!--end row-->
                </div><!--end card-header-->
                @*Tablo gelecek*@
            </div>
        </div> <!-- end col -->
    </div>
</div>

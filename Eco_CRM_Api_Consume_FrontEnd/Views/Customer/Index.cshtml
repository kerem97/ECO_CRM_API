@{
    ViewBag.Title = "Müşteri Listesi";
    var customers = Model as List<DisplayCustomerResponse>;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ECO CRM - Müşteriler</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <style>
        /* Genel sayfa ve tablo stilini koruyoruz */
        body {
            background: linear-gradient(to bottom, #b30000, #4d0000);
            margin: 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: #fff;
            display: flex;
            min-height: 100vh;
            overflow: hidden;
            flex-direction: column;
            overflow-y: scroll; /* Her zaman dikey kaydırma çubuğunu göster */
            scrollbar-width: thin; /* Daha ince bir scrollbar genişliği */
            scrollbar-color: #990000 #333; /* Kaydırma çubuğu renkleri */
            padding: 0 20px;
        }

            body::-webkit-scrollbar {
                width: 8px; /* Kaydırma çubuğu genişliği */
            }

            body::-webkit-scrollbar-track {
                background: #333; /* Scrollbar arka plan rengi */
            }

            body::-webkit-scrollbar-thumb {
                background-color: #990000; /* Scrollbar tutacağı rengi */
                border-radius: 10px; /* Yuvarlatılmış köşeler */
                border: 2px solid #333; /* Çubuğun içinde boşluk bırakmak için kenarlık */
            }

        .navbar {
            background-color: #990000;
            padding: 15px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            color: #fff;
            font-weight: bold;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            z-index: 1000;
        }

            .navbar .eco-crm {
                font-size: 24px;
            }

            .navbar .user-info {
                font-size: 18px;
            }

        .sidebar {
            background-color: #333;
            padding: 20px;
            width: 200px;
            position: fixed;
            top: 60px;
            bottom: 0;
            left: 0;
            display: flex;
            flex-direction: column;
            z-index: 900;
            box-shadow: 2px 0 5px rgba(0, 0, 0, 0.3);
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
                padding: 10px 0;
                font-size: 16px;
                border-bottom: 1px solid #444;
                margin-bottom: 5px;
                transition: background-color 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

        h2, h3 {
            margin-left: 220px;
            margin-top: 80px;
            color: #fff;
            text-align: left;
            padding: 0;
        }

        table {
            width: calc(100% - 220px);
            margin-left: 100px;
            margin-top: 40px;
            border-collapse: collapse;
            background-color: #660000;
            border-radius: 8px;
            overflow: hidden;
            color: #fff;
            font-size: 12px;
        }

        th, td {
            padding: 6px;
            text-align: left;
            color: #fff;
            border: 1px solid #660000;
        }

        th {
            background-color: #990000;
            color: #fff;
            text-transform: uppercase;
            letter-spacing: 0.05em;
            font-size: 12px;
        }

        td {
            background-color: #b30000;
            font-size: 12px;
        }

        tbody tr:hover {
            background-color: #cc0000;
        }

        tbody tr:nth-child(odd) td {
            background-color: #660000;
        }

        tbody tr:nth-child(even) td {
            background-color: #4d0000;
        }
    </style>
</head>
<body>
    <div class="sidebar">
        <a href="/Dashboard/Index/">Ana Sayfa</a>
        <a href="/CustomerOperation/Index/">Tüm İşlemler</a>
        <a href="/Customer/">Müşteriler</a>
        <a href="/Account/Logout/">Çıkış</a>
    </div>

    <div class="navbar">
        <div class="eco-crm">ECO CRM</div>
        <div class="user-info">@ViewBag.FullName</div>
    </div>

    <h3 style="margin-left:100px;">Müşteri Listesi</h3>

    <table style="width: 100%;">
        <thead>
            <tr>
                <th>Müşteri Adı</th>
                <th>Şehir</th>
                <th>İlçe</th>
                <th>Adres</th>
                <th>Ülke</th>
                <th>Yetkili Kişi</th>
                <th>Telefon</th>
                <th>E-Posta</th>
                <th>Yurt içi</th>
                <th>Açıklama</th>
                <th>Durum</th>
                <th>Grup</th>
                <th>İşlem Detayları</th>
            </tr>
        </thead>
        <tbody id="customer-table-body">
            @foreach (var customer in customers)
            {
                <tr>
                    <td>@customer.CompanyName</td>
                    <td>@customer.City</td>
                    <td>@customer.District</td>
                    <td>@customer.Address</td>
                    <td>@customer.Country</td>
                    <td>@customer.ContactName</td>
                    <td>@customer.ContactPhone1</td>
                    <td>@customer.ContactEmail</td>
                    <td>@(customer.IsDomestic ? "Evet" : "Hayır")</td>
                    <td>@customer.Description</td>
                    <td>@customer.Status</td>
                    <td>@customer.Group</td>

                    <td>
                        <a href="/CustomerOperation/OperationsByCustomer/@customer.Id" class="btn btn-primary btn-sm" style="background-color: #990000; border: none; padding: 5px 10px; text-decoration: none; color: #fff; border-radius: 5px;">
                            Detaylar
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="position: fixed; bottom: 10px; right: 20px; color: #fff; font-size: 12px;">
        Designed by Eco Software Development ℗
    </div>

    <div id="pagination-controls" style="text-align: center; margin-top: 20px;">
        <button class="btn btn-danger btn-sm mx-1" onclick="changePage('prev')" style="border-radius: 20px; padding: 5px 15px;">◀ Previous</button>
        <span id="currentPage" style="font-size: 16px; font-weight: bold; padding: 0 10px; color: #fff;">1</span>
        <button class="btn btn-danger btn-sm mx-1" onclick="changePage('next')" style="border-radius: 20px; padding: 5px 15px;">Next ▶</button>
    </div>

    <script>
        let currentPage = 1;
        const pageSize = 8;
        const token = '@ViewBag.Token';

        $(document).ready(function () {
            fetchData(currentPage);
        });

        function fetchData(page) {
            $.ajax({
                url: `https://localhost:44309/api/Customers/paged-customers?pageNumber=${page}&pageSize=${pageSize}`,
                method: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + token
                },
                success: function (data) {
                    currentPage = page;
                    $('#currentPage').text(currentPage);
                    updateTable(data);
                },
                error: function () {
                    alert('Veri alınırken hata oluştu.');
                }
            });
        }

        function updateTable(data) {
            let tbody = $('#customer-table-body');
            tbody.empty(); // Tablodaki eski veriyi temizle

            data.forEach(customer => {
                tbody.append(`
                               <tr>
                        <td>${customer.companyName || ""}</td>
                        <td>${customer.city || ""}</td>
                        <td>${customer.district || ""}</td>
                        <td>${customer.address || ""}</td>
                        <td>${customer.country || ""}</td>
                        <td>${customer.contactName || ""}</td>
                        <td>${customer.contactPhone1 || ""}</td>
                        <td>${customer.contactEmail || ""}</td>
                        <td>${customer.isDomestic ? "Evet" : "Hayır"}</td>
                        <td>${customer.description || ""}</td>
                        <td>${customer.status || ""}</td>
                        <td>${customer.group || ""}</td>
                        <td>
                            <a href="/CustomerOperation/OperationsByCustomer/${customer.id}" class="btn btn-primary btn-sm"
                               style="background-color: #990000; border: none; padding: 5px 10px; text-decoration: none; color: #fff; border-radius: 5px;">
                                Detaylar
                            </a>
                        </td>
                    </tr>
                    `);
            });
        }

        function changePage(direction) {
            if (direction === 'next') {
                fetchData(currentPage + 1);
            } else if (direction === 'prev' && currentPage > 1) {
                fetchData(currentPage - 1);
            }
        }
    </script>
</body>
</html>
